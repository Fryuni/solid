{
  "name": "solid-nanostores",
  "version": "0.1.0",
  "description": "Global state management in Solid using nanostores.",
  "keywords": [
    "solid",
    "nanostores",
    "state management"
  ],
  "license": "MIT",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nanostores/solid.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "lint": "eslint --ext=js,ts,jsx,tsx .",
    "lint:fix": "eslint --ext=js,ts,jsx,tsx . --fix",
    "prepublishOnly": "pnpm run build"
  },
  "homepage": "https://github.com/nanostores/solid#readme",
  "peerDependencies": {
    "nanostores": "^0.5.6"
  },
  "dependencies": {
    "nanostores": "^0.5.12",
    "solid-js": "^1.3.13"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.18.9",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/user-event": "^13.5.0",
    "bumpp": "^7.1.1",
    "eslint": "^8.12.0",
    "eslint-plugin-solid": "^0.4.5",
    "jsdom": "^19.0.0",
    "solid-testing-library": "^0.3.0",
    "tsup": "^5.12.1",
    "typescript": "^4.5.2",
    "vite-plugin-solid": "^2.2.6",
    "vitest": "^0.7.11"
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "plugin:solid/typescript",
      "@antfu/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/semi": [
        2,
        "always"
      ]
    }
  }
}
