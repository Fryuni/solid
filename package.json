{
  "name": "@nanostores/solid",
  "type": "module",
  "version": "0.3.2",
  "description": "Solid integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores.",
  "publishConfig": {
    "directory": "package"
  },
  "keywords": [
    "store",
    "state",
    "state manager",
    "solid"
  ],
  "license": "MIT",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nanostores/solid.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --tag --push && pnpm publish",
    "lint": "eslint --ext=js,ts,jsx,tsx .",
    "lint:fix": "eslint --ext=js,ts,jsx,tsx . --fix",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "postpublish": "rimraf ./package"
  },
  "homepage": "https://github.com/nanostores/solid#readme",
  "peerDependencies": {
    "nanostores": "^0.8.0",
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.39.3",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "bumpp": "^9.1.0",
    "clean-publish": "^4.0.2",
    "eslint": "^8.41.0",
    "eslint-plugin-solid": "^0.12.1",
    "jsdom": "^19.0.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.8.0",
    "rimraf": "^5.0.1",
    "solid-js": "^1.7.5",
    "solid-testing-library": "^0.5.1",
    "tsup": "^6.7.0",
    "typescript": "^4.9.4",
    "vite": "^4.3.9",
    "vite-plugin-solid": "^2.7.0",
    "vitest": "^0.31.1"
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "plugin:solid/typescript",
      "@antfu/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/semi": [
        2,
        "always"
      ]
    }
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  }
}
