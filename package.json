{
  "name": "@nanostores/solid",
  "version": "0.2.0",
  "description": "Solid integration for Nano Stores, a tiny state manager with many atomic tree-shakable stores.",
  "publishConfig": {
    "directory": "package"
  },
  "keywords": [
    "store",
    "state",
    "state manager",
    "solid"
  ],
  "license": "MIT",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nanostores/solid.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --tag --push && pnpm publish",
    "lint": "eslint --ext=js,ts,jsx,tsx .",
    "lint:fix": "eslint --ext=js,ts,jsx,tsx . --fix",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "postpublish": "rimraf ./package"
  },
  "homepage": "https://github.com/nanostores/solid#readme",
  "peerDependencies": {
    "nanostores": "^0.7.0",
    "solid-js": ">=1.4.0"
  },
  "dependencies": {
    "nanostores": "^0.7.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.18.9",
    "@testing-library/dom": "^8.12.0",
    "@testing-library/jest-dom": "^5.16.3",
    "bumpp": "^7.1.1",
    "clean-publish": "^4.0.0",
    "eslint": "^8.12.0",
    "eslint-plugin-solid": "^0.4.5",
    "jsdom": "^19.0.0",
    "nanodelay": "^2.0.2",
    "rimraf": "^3.0.2",
    "solid-js": "^1.4.8",
    "solid-testing-library": "^0.3.0",
    "tsup": "^5.12.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.7",
    "vite-plugin-solid": "^2.3.0",
    "vitest": "^0.8.5"
  },
  "eslintConfig": {
    "plugins": [
      "solid"
    ],
    "extends": [
      "plugin:solid/typescript",
      "@antfu/eslint-config-ts"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "@typescript-eslint/semi": [
        2,
        "always"
      ]
    }
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  }
}
